@model IEnumerable<inicioRegistro.Models.Client>

@{
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}
@Styles.Render("~/Content/icss/crud/crud.css")

<p> &nbsp;&nbsp;&nbsp; &larr; <a href='@Url.Content("~/Admin/Index")'>ATRÁS</a></p>
<p>
    &nbsp;&nbsp;&nbsp; &plus;  @Html.ActionLink("NUEVO REGISTRO", "Create")
</p>
<h1>CLIENTE</h1>
<div>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                ID
            </th>
            <th>
                NOMBRE
            </th>
            <th>
                APELLIDO
            </th>
            <th>
                CEDULA
            </th>
            <th>
                DIRECCION
            </th>
            <th>
                TELEFONO
            </th>
            <th>
                FK_IdUSUARIO
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fk_idUsuario)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idCliente }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idCliente })
                </td>
            </tr>
        }

    </table>
</div>
