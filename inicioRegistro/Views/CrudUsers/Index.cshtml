@model IEnumerable<inicioRegistro.Models.User>

@{
    Layout = "~/Views/Shared/_LayoutAdmi.cshtml";
}

@Styles.Render("~/Content/icss/crud/crud.css")
<p> &nbsp;&nbsp;&nbsp; &larr; <a href='@Url.Content("~/Admin/Index")'>ATRÁS</a></p>
<p>
    &nbsp;&nbsp;&nbsp; &plus;  @Html.ActionLink("NUEVO REGISTRO", "Create")
</p>
<h1>USUARIO</h1>
<div>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pin)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pin)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idUsuario }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.idUsuario })
                </td>
            </tr>
        }

    </table>
</div>